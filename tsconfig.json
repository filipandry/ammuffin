{
    "include": [
        "./src/**/*"
    ],
    "compilerOptions": {
        "noFallthroughCasesInSwitch": true,
        "strict": true,
        "esModuleInterop": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "jsx": "react-jsx",
        "typeRoots": [
            "node_modules/@types",
            "src/types"
        ],
        "target": "ES2015",
        "allowJs": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true
    }
}